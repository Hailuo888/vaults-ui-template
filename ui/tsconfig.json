{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@drift-labs/sdk": ["../drift-common/protocol/sdk"],
      "@drift/common": ["../drift-common/common-ts/lib"],
      "@drift-labs/react": ["../drift-common/react/lib"],
      "@drift-labs/icons": ["../drift-common/icons/dist"],
      "@drift-labs/vaults-sdk": ["../drift-vaults/ts/sdk"],
      "react": ["./node_modules/@types/react"],
      "BN": ["./drift-common/protocol/sdk/node_modules/@types/bn.js"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/constants/style.ts"
  ],
  "exclude": ["node_modules", "drift-common"]
}
